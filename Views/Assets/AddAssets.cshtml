@model Application.ViewModels.AddAssetsModelView
@{
    ViewData["Title"] = "Add New Asset";
}

@if (!string.IsNullOrWhiteSpace(ViewBag.message))
{
    <div class="alert @ViewBag.MessageType alert-dismissible fade show" role="alert">
        @ViewBag.Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
<div class="row">
    <div class="col-12 col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-light">
                <h5 class="text-center">Add New Asset</h5>
            </div>
            <div class="card-body">
                <form asp-controller="Assets" asp-action="AddAssets" method="post">
                    <div class="mb-3">
                        <label class="form-label">Asset Name:</label>
                        <input type="text" asp-for="Name" class="form-control" placeholder="Ej: Bitcoin, Tesla" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <h6 class="mb-3">Historical Prices</h6>
                    <div class="row">
                        @for (int i = 0; i < 20; i++)
                        {
                            <div class="col-md-6 mb-2">
                                <div class="card border-secondary">
                                    <div class="card-header bg-secondary text-light py-1"></div>
                                    <div class="card-body py-2">
                                        <div class="row">
                                            <div class="col-6">
                                                <label class="form-label small">Date:</label>
                                                <input type="date" asp-for="PriceHistory[i].Date" class="form-control form-control-sm" required />
                                                <span asp-validation-for="PriceHistory[i].Date" class="text-danger"></span>
                                            </div>
                                            <div class="col-6">
                                                <label class="form-label small">Price ($):</label>
                                                <input type="number" asp-for="PriceHistory[i].Price" step="0.01" min="0" class="form-control form-control-sm" placeholder="0.00" required />
                                                <span asp-validation-for="PriceHistory[i].Price" class="text-danger"></span>
                                            </div>
                                        </div>
                                        
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    <div class="mt-3 d-flex justify-content-end">
                        <a asp-controller="Assets" asp-action="Index" class="btn btn-outline-warning me-2">Back to Home</a>
                        <button type="submit" class="btn btn-outline-primary">Add Asset</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

